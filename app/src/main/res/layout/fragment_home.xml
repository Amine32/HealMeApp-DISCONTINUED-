<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical"
    android:background="@drawable/home"

    >
    <ImageButton
        android:id="@+id/Home_BtnRequestMedicine"
        android:layout_width="191dp"
        android:layout_height="260dp"
        android:layout_marginVertical="110dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/request_medicine_block"
        />

    <ImageButton
        android:id="@+id/Home_DeliverMedicine"
        android:layout_width="191dp"
        android:layout_height="260dp"
        android:layout_marginVertical="110dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/Home_BtnRequestMedicine"
        android:background="@drawable/deliver_medicine_block"
        />

    <ImageButton
        android:id="@+id/Home_ActiveRequest"
        android:layout_width="191dp"
        android:layout_height="260dp"
        android:layout_below="@+id/Home_BtnRequestMedicine"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-50dp"
        android:text="Active Requests"
        android:background="@drawable/active_request_block"
        />

    <ImageButton
        android:id="@+id/Home_ActiveOrders"
        android:layout_width="191dp"
        android:layout_height="260dp"
        android:layout_below="@+id/Home_DeliverMedicine"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/Home_ActiveRequest"
        android:text="Active Orders"
        android:background="@drawable/active_order_block"
        />


</RelativeLayout>